<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="artist"
            type="com.example.lasftfm.repository.network.Artist2" />
        <variable
            name="listener"
            type="com.example.lasftfm.ui.adapters.ArtistListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_track_item"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:onClick="@{()->listener.onClick(artist)}"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/trackPick"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/track_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="@{artist.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/trackPick"
            app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintStart_toStartOf="@+id/trackPick"
            app:layout_constraintTop_toBottomOf="@+id/trackPick"
            app:layout_constraintVertical_bias="0.6"
            tools:text="asdasdashjdkhgdas" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>